<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/dimen_120_dp"
        android:layout_height="@dimen/dimen_171_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_124_dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/app_desc"
        android:layout_width="@dimen/dimen_187_dp"
        android:layout_height="@dimen/dimen_22_dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:src="@mipmap/ic_launcher_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_icon" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="@dimen/dimen_315_dp"
        android:layout_height="@dimen/dimen_50_dp"
        android:layout_marginTop="@dimen/dimen_127_dp"
        android:background="@drawable/bg_login_button"
        android:text="@string/welcome_button"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_15_dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_icon"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen_82_dp"
        android:layout_height="@dimen/dimen_21_dp"
        android:layout_marginBottom="@dimen/dimen_15_dp"
        android:src="@mipmap/ic_logo_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>