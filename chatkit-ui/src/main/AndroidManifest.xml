<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.netease.yunxin.kit.chatkit.ui">

    <application>
        <provider
            android:name="com.netease.yunxin.kit.corekit.startup.InitializationProvider"
            android:authorities="${applicationId}.xkit-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="com.netease.yunxin.kit.chatkit.ui.ChatUIService"
                android:value="xkit.startup" />
        </provider>

        <activity
            android:name="com.netease.yunxin.kit.chatkit.ui.page.ChatP2PActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="com.netease.yunxin.kit.chatkit.ui.page.ChatTeamActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="com.netease.yunxin.kit.chatkit.ui.page.ChatSettingActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="com.netease.yunxin.kit.chatkit.ui.page.ChatMessageAckActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="com.netease.yunxin.kit.chatkit.ui.page.ChatSearchActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity
            android:name="com.netease.yunxin.kit.chatkit.ui.page.WatchImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name="com.netease.yunxin.kit.chatkit.ui.page.WatchVideoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>